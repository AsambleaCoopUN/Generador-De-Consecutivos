<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="author" content="Desarrolladores: Andres Cardenas y Jeisson Velosa, Base de datos: Miguel Castañeda">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Generador de Consecutivos">
    <meta name="keywords" content="HTML, CSS, JavaScript">
    <!--Bootstrap-->
    <link rel="stylesheet" type="text/css" href="./dist/css/bootstrap.min.css">
    <!--CSS-->
    <link rel="stylesheet" type="text/css" href="./dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../stylesheets/styles.css" >
    <link rel="stylesheet" href="../stylesheets/stylelist.css" >
    <!--Titulo-->
    <title>Listado consecutivos</title> 
    <!--Favicon-->
    <link rel="icon" type="image/x-icon" href="../images/favicon_cpun.png">
  </head>

  <body class="container">
    <header>
      <!-- Barra de navegación -->
      <nav class="navbar navbar-expand-md">
        <div class="container-fluid">
          <!-- Botón dispositivos móviles -->
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <!-- Logotipo y enlaces de navegación -->
          <div class="collapse navbar-collapse" id="menu">
            <a class="navbar-brand">
              <figure>
                <img src="../images/logo_cpun_02.png" width="250" alt="Logo de la página web">
              </figure>
            </a>
            <ul class="navbar-nav d-flex justify-content-center align-items-center">
              <li class="nav-item">
                <a class="nav-link" href='/admin'>Usuarios</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href='/list'>Reportes</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href='/logout'>Salida</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main clas="main">
      <section class="main-section">
          <table class="main-section_table table table-hover mt-4">
            <thead>
              <tr>
                <!-- <th scope="col">ID</th> -->
                <th scope="col" rowspan="2">Nombre Usuario</th>
                <th scope="col" colspan="4">Permisos</th> 
              </tr>
              <tr>
                <th>Administrador</th>
                <th>Estandar</th>
                <th>Revisor</th>
                <th>Comercial</th>
              </tr>
            </thead>
            <tbody>
              <% userResult.forEach((row) => { %>
                <tr></tr>
              <tr>
                <!-- <td><%= //row.usuario_id %></td> -->
                <td><%= row.usuario_nombre %></td>
                <td><input type="checkbox" name="option" id="1">1<%=// row.usuario_nombre %></td>
                <td><input type="checkbox" name="option" id="2">2<%=// row.usuario_nombre %></td>
                <td><input type="checkbox" name="option" id="3">3<%=// row.usuario_nombre %></td>
                <td><input type="checkbox" name="option" id="4">4<%=// row.usuario_nombre %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
      </section>
    </main>
  </body>

  <!-- javascripts-->
  <script src="/JS/jquery-3.6.3.min.js"></script>
  <script src="/dist/js/bootstrap.min.js"></script>
  <script src="/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="./main.js"></script>
</html>
