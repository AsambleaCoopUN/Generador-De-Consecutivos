<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="author" content="Desarrolladores: Andres Cardenas y Jeisson Velosa, Base de datos: Miguel Castañeda">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Generador de Consecutivos">
    <meta name="keywords" content="HTML, CSS, JavaScript">
    <!--Bootstrap-->
    <link rel="stylesheet" type="text/css" href="./dist/css/bootstrap.min.css">
    <!--CSS-->
    <link rel="stylesheet" type="text/css" href="./dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../stylesheets/styles.css" >
    <link rel="stylesheet" href="../stylesheets/stylelist.css" >
    <!--Titulo-->
    <title>Listado consecutivos</title> 
    <!--Favicon-->
    <link rel="icon" type="image/x-icon" href="../images/favicon_cpun.png">
  </head>

  <body class="container">
    <header>
      <!-- Barra de navegación -->
      <nav class="navbar navbar-expand-md">
        <div>
          <!-- Botón dispositivos móviles -->
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <!-- Logotipo y enlaces de navegación -->
          <div class="collapse navbar-collapse" id="navbarToggler">
            <a class="navbar-brand">
              <figure>
                <img src="../images/logo_cpun_02.png" width="250" alt="Logo de la página web">
              </figure>
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main clas="main">
      <section class="main-section">
          <table class="main-section_table table table-hover table-bordered table-striped table-center mt-4">
            <thead>
              <tr>
                <th scope="col">Consecutivo</th>
                <th scope="col">Descripción</th>
                <th scope="col">Fecha</th>
              </tr>
            </thead>
            <tbody>
              <% result.forEach((row) => { %>
              <tr>
                <td><%= row.consecutivo %></td>
                <td><%= row.descripcion %></td>
                <td><%= row.fecha_generacion%></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
      </section>
    </main>
  </body>

  <!-- javascripts-->
  <script src="/JS/jquery-3.6.3.min.js"></script>
  <script src="/dist/js/bootstrap.min.js"></script>
  <script src="/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script src="./main.js"></script>
</html>
